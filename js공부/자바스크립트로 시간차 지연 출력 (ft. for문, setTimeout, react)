const data = [1, 2, 3, 4, 5]
for (let i = 0; i < data.length; i++) {
  setTimeout(() => {
    console.log(i)
  }, i * 1000)
}
//결과
//0
//1
//2
//3
//4

const data = [1, 2, 3, 4, 5]

for (let i = 0; i < data.length; i++) {
  setTimeout(() => {
     const array = [];
     array.push(data[i])
     array.map(v => console.log(v))
  }, i * 1000)
}
//결과
//1
//2
//3
//4
//5
