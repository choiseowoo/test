    function sendToParent() {
        var inputs = document.getElementsByTagName("input"); 
        var selectedValue = "";

        for (var i = 0; i < inputs.length; i++) {
            if (inputs[i].type === "radio" && inputs[i].checked) {
                selectedValue = inputs[i].value;
                break;
            }
        }

