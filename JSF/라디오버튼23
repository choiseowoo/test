    function sendToParent() {
        // ì„ íƒëœ ë¼ë””ì˜¤ ë²„íŠ¼ ê°€ì ¸ì˜¤ê¸°
        let selectedRadio = document.querySelector("input[name='userForm:userRadio']:checked");
        
