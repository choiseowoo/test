                window.opener.postMessage(formattedValue, "*"); // ë¶€ëª¨ ì°½ìœ¼ë¡œ ê°’ ì „ë‹¬
                window.close(); // í˜„ì¬ ì°½ ë‹«ê¸°
            }
        } else {
            alert("ìœ ì €ë¥¼ ì„ íƒí•´ì£¼ì„¸ìš”.");
