            let selectedValue = selectedRadio.value; // "userid/name/groupcode/groupname"
            let values = selectedValue.split("/");  // '/' ê¸°ì¤€ìœ¼ë¡œ ë°ì´í„° ë¶„ë¦¬

            if (values.length === 4) {
                let userid = values[0];
                let name = values[1];

