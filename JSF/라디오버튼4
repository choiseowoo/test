            this.selectedUserLabel = selectedUser;
            System.out.println("âœ… ì„ íƒëœ ê°’: " + selectedUser);
        } else {
            System.out.println("âŒ ì„ íƒëœ ê°’ì´ ì—†ìŒ");
        }
    }

