import javax.inject.Named;
import java.io.Serializable;
import java.util.ArrayList;
import java.util.List;

@Named
@ViewScoped // âœ… RequestScoped â†’ ViewScopedë¡œ ë³€ê²½
public class UserBean implements Serializable {
    private List<User> userList;
    private boolean searchExecuted = false;

    @PostConstruct
    public void init() {
        userList = new ArrayList<>(); // ì´ˆê¸°ì—ëŠ” ë¹ˆ ë¦¬ìŠ¤íŠ¸
    }

    public void searchUsers() {
        userList = userMapper.searchUsers(); // DBì—ì„œ ê²€ìƒ‰
        searchExecuted = !userList.isEmpty(); // ê²€ìƒ‰ ì‹¤í–‰ ì—¬ë¶€ ì €ì¥
    }

    public List<User> getUserList() { return userList; }
