    </h:dataTable>

    <h:commandButton value="ì´ì „" action="#{userBean.previousPage}" rendered="#{userBean.currentPage > 1}" />
    <h:commandButton value="ë‹¤ìŒ" action="#{userBean.nextPage}" rendered="#{not empty userBean.userList}" />
